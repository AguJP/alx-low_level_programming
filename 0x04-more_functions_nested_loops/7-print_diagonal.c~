#include "main.h"

/**
 * print_diagonal - Function to draw a diagonal line
 * @n: Number of times to draw the character \
 * Return: Always 0
 */

void print_line(int n)
{
	int i;
	int j;

	if (n < 1)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 0; i < n; i++)
		{
			
			_putchar('\\');
		}
		_putchar('\n');
	}
}
